<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/surface_white"
    app:strokeColor="@color/primary_light"
    app:strokeWidth="1dp"
    app:rippleColor="@color/primary_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">
        
        <!-- Indicador lateral decorativo -->
        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/primary_purple"
            android:layout_marginEnd="12dp"/>
        
        <!-- Contenedor vertical para título, contenido y fecha -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            
            <!-- Título de la nota -->
            <TextView
                android:id="@+id/tvNoteTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sample_note"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end" />
            
            <!-- Preview del contenido -->
            <TextView
                android:id="@+id/tvNoteContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contenido de la nota..."
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="2dp" />
            
            <!-- Fecha de última modificación -->
            <TextView
                android:id="@+id/tvNoteDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hace 5 minutos"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:layout_marginTop="6dp"
                android:alpha="0.7" />
                
        </LinearLayout>
            
    </LinearLayout>
    
</com.google.android.material.card.MaterialCardView>
